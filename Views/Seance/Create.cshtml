            </div>

            <div class="form-group">
                <label asp-for="HoraireId" class="control-label">Horaire</label>
                <select asp-for="HoraireId" class="form-control" asp-items="ViewBag.Horaires"></select>
                <span asp-validation-for="HoraireId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SalleId" class="control-label">Salle</label>
