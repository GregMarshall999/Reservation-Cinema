@model IEnumerable<ReservationCinema.Models.Cinema>

<div class="row" id="cinemaList">
    @foreach (var cinema in Model)
    {
        <div class="col-md-6 mb-4 cinema-item">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title text-primary">@cinema.Nom</h5>
                    <p class="card-text">
                        <strong>Adresse :</strong> @cinema.Numero, @cinema.Rue, @cinema.Ville<br />
                        <strong>Nombre de salles :</strong> 
                    </p>
                    <a href="@Url.Action("Details", "Cinema", new { id = cinema.Id })"
                       class="btn btn-primary btn-sm">
                        Voir les détails
                    </a>
                </div>
            </div>
        </div>
    }
</div>
